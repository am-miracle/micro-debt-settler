{
  "name": "micro-debt-settler",
  "version": "1.0.0",
  "description": "Auto-settler app for micro-debts with automated payment requests and configurable nag reminders",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --watchAll=false",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts --fix",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:up": "ts-node src/database/migrate.ts up",
    "migrate:down": "ts-node src/database/migrate.ts down",
    "migrate:create": "ts-node src/database/migrate.ts create",
    "seed": "ts-node src/database/seed.ts"
  },
  "keywords": [
    "debt",
    "payment",
    "automation",
    "typescript",
    "paystack",
    "flutterwave"
  ],
  "author": "Miracle Jude",
  "license": "MIT",
  "dependencies": {
    "@paypal/paypal-server-sdk": "^1.1.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "resend": "^6.4.2",
    "sequelize": "^6.37.5",
    "stripe": "^17.3.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.16",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "umzug": "^3.8.2"
  }
}
