# Server Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database Configuration
DATABASE_URL
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
# For testing: Use onboarding@resend.dev as sender (no domain verification needed)
# For production: Verify your domain on Resend and use your domain email
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=Micro Debt Settler <onboarding@resend.dev>

# Payment Gateway Configuration

# Stripe (International)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (International)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Paystack (Nigeria, Ghana, South Africa, Kenya)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Flutterwave (Nigeria and Africa-wide)
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your_encryption_key

# Calendar Integration (Google Calendar)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth/google/callback

# SMS Configuration (Twilio - International - https://www.twilio.com)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# App Configuration
APP_NAME=Micro Debt Settler
APP_URL=http://localhost:8000
FRONTEND_URLS=http://localhost:3000,http://localhost:3001

# Debt Settings
DEFAULT_PAYMENT_DEADLINE_HOURS=24
DEFAULT_NAG_SENSITIVITY=medium

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Nigerian Payment Configuration
DEFAULT_CURRENCY=NGN
SUPPORT_BANK_TRANSFER=true
BANK_TRANSFER_REFERENCE_PREFIX=MDS
